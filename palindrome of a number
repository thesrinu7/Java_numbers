import java.util.*;
class Palindrome
{
    public static void main(String []args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.print("enter any number:");
        int num=sc.nextInt();
        int temp=num;
        int rem,rev=0;
        while(num>0)
        {
            rem=num%10;
            rev=rev*10+rem;
            num=num/10;
	}
	 if(temp==rev)
         {
               System.out.println("it is a palindrome number");
         }
         else
         System.out.println("it is not a palindrome");

    }
}

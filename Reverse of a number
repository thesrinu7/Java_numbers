import java.util.*;
class Reverse
{
    public static void main(String []args)
    {
        Scanner sc=new Scanner(System.in);
	      System.out.print("please enter original number:");
        int orgn=sc.nextInt();
        int rev=0;
        while(orgn>0)
        {
            int rem=orgn%10;
            rev=rev*10+rem;
            orgn=orgn/10;
        }
        System.out.println("The reverse of an original is:"+rev);
    }
}
